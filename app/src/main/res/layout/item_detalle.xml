<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Del JSON vamos a utilizar -->
        <!-- Imagen, Nombre, Precio, DescripciÃ³n -->

        <TextView
            android:id="@+id/nombre_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Nombre"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:foregroundGravity="center"
            android:id="@+id/image_details"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ceviche_mixto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombre_details" />

        <TextView
            android:id="@+id/descripcion_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Descripcion"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_details" />

        <ImageView

            android:foregroundGravity="center"
            android:id="@+id/logo_details"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/logoapp2"
            app:layout_constraintStart_toStartOf="@+id/image_details"
            app:layout_constraintTop_toTopOf="@+id/image_details" />

        <TextView
            android:id="@+id/precio_details"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="$ 00.000"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/image_details"
            app:layout_constraintEnd_toEndOf="@+id/image_details" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>