<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pantalla"
    tools:context=".menu_restaurant.Aperitivos">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contenedor_fragment">

        <Button
            android:id="@+id/btn_postres"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Postres"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_cafes"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimaryDark"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="CafÃ©s"
            android:textAlignment="center"
            android:textColor="@android:color/white" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/container_aperitivos"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment4"
            android:name="cl.sulcansystem.restaurante.menu_restaurant.postres_cafes.Postres"
            android:layout_width="1dp"
            android:layout_height="0dp" />

        <fragment
            android:id="@+id/fragment5"
            android:name="cl.sulcansystem.restaurante.menu_restaurant.postres_cafes.Cafes"
            android:layout_width="2dp"
            android:layout_height="0dp" />

    </FrameLayout>
</LinearLayout>